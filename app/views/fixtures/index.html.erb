<h1>Listing fixtures</h1>
<%= will_paginate @fixtures %>

<table>
  <thead>
    <tr>
      <th>Home</th>
      <th>Homepoints</th>
      <th>Away</th>
      <th>Awaypoints</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fixtures.each do |fixture| %>
      <tr>
        <td><%= fixture.home.name %></td>
        <td><%= fixture.homepoints %></td>
        <td><%= fixture.away.name %></td>
        <td><%= fixture.awaypoints %></td>
        <td><%= link_to 'Show', fixture %></td>
        <td><%= link_to 'Edit', edit_fixture_path(fixture) %></td>
        <td><%= link_to 'Destroy', fixture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

<%= will_paginate @fixtures %>